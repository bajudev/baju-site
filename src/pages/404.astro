---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout title="404 | Page Not Found">
  <div class="text-center py-20 stagger-animation">
    <h1 class="text-8xl font-bold mb-4 text-gradient glow">404</h1>
    <p class="text-2xl text-[var(--color-text)] mb-8">Page not found</p>
    <p class="text-[var(--color-text)] mb-8 text-lg">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <a
      href="/"
      class="inline-block px-8 py-4 bg-gradient-to-r from-[var(--color-accent)] to-[var(--color-secondary)] text-white rounded-full hover:scale-105 transition-all duration-300 font-medium shine"
      aria-label="Return to homepage"
    >
      Go back home
    </a>
  </div>
</Layout>