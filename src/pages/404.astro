---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout title="setofr | 404">
  <div class="text-center py-20">
    <h1 class="text-6xl font-bold mb-4 text-[var(--color-heading)]">404</h1>
    <p class="text-xl text-[var(--color-text)] mb-8">Page not found</p>
    <p class="text-[var(--color-text)] mb-8">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <a
      href="/"
      class="inline-block px-6 py-3 bg-[var(--color-accent)] text-white rounded-lg hover:bg-[var(--color-primary)] transition-colors duration-300"
      aria-label="Return to homepage"
    >
      Go back home
    </a>
  </div>
</Layout>
