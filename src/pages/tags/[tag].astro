---
import Layout from "../../layouts/Layout.astro";
import BlogCard from "../../components/BlogCard.astro";
import { getPosts, getPostsByTag, getAllTags } from "../../utils/posts";
import { formatBlogDate } from "../../utils/date";

export async function getStaticPaths() {
  const allPosts = getPosts();
  const uniqueTags = getAllTags(allPosts);

  return uniqueTags.map((tag) => ({
    params: { tag },
    props: {
      posts: getPostsByTag(allPosts, tag),
    },
  }));
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<Layout title={`Posts tagged "${tag}"`}>
  <section class="space-y-10">
    <div>
      <h1 class="text-3xl font-bold">Posts tagged "{tag}"</h1>
      <p class="text-lg text-[var(--color-text)] mt-4">
        {posts.length}
        {posts.length === 1 ? "post" : "posts"} found
      </p>
    </div>

    <div class="space-y-6">
      {posts.map((post) => (
        <BlogCard
          url={post.url}
          title={post.title}
          description={post.description}
          pubDate={formatBlogDate(post.pubDate)}
          tags={post.tags}
        />
      ))}
    </div>
  </section>
</Layout>