---
import Layout from "../../layouts/Layout.astro";
import BlogCard from "../../components/BlogCard.astro";
import PageHeader from "../../components/ui/PageHeader.astro";
import { getPosts, getPostsByTag, getAllTags } from "../../utils/posts";
import { formatBlogDate } from "../../utils/date";

export async function getStaticPaths() {
  const allPosts = getPosts();
  const uniqueTags = getAllTags(allPosts);

  return uniqueTags.map((tag) => ({
    params: { tag },
    props: {
      posts: getPostsByTag(allPosts, tag),
    },
  }));
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<Layout title={`Posts tagged "${tag}"`}>
  <PageHeader title={`Posts tagged "${tag}"`}>
    <p class="text-lg text-muted mt-4">
      {posts.length}
      {posts.length === 1 ? "post" : "posts"} found
    </p>
  </PageHeader>

  <section class="space-y-10">
    <div class="space-y-6">
      {posts.map((post) => (
        <BlogCard
          url={post.url}
          title={post.title}
          description={post.description}
          pubDate={formatBlogDate(post.pubDate)}
          tags={post.tags}
        />
      ))}
    </div>
  </section>
</Layout>