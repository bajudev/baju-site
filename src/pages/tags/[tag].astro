---
import Layout from '../../layouts/Layout.astro';
import BlogPost from '../../components/BlogPost.astro';

// Generate static paths and pass posts as props
export async function getStaticPaths() {
  const allPosts = Object.entries(import.meta.glob('../posts/*.md', { eager: true }))
    .map(([path, post]) => ({
      url: path.replace('../', '/').replace('.md', ''),
      ...post.frontmatter
    }));

  const uniqueTags = [...new Set(allPosts.flatMap(post => post.tags || []))];

  return uniqueTags.map(tag => ({
    params: { tag },
    props: {
      posts: allPosts.filter(post => post.tags.includes(tag))
    },
  }));
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<Layout title={`Posts tagged "${tag}"`}>
  <section class="space-y-6">
    <h2 class="text-2xl font-semibold text-blue-400">Posts tagged "{tag}"</h2>
    <ul class="space-y-4">
      {posts.map((post) => (
        <BlogPost
          url={post.url}
          title={post.title}
          description={post.description}
          pubDate={post.pubDate}
        />
      ))}
    </ul>
  </section>
</Layout>