---
import Layout from "../layouts/Layout.astro";
import ConcertCard from "../components/ui/ConcertCard.astro";
import { pieces } from "../data/classicalWatchlist.js";
import { isFutureDate } from "../utils/date";
import "../styles/global.css";

const upcomingConcerts = pieces.watched.filter((concert) => isFutureDate(concert.date));
const pastConcerts = pieces.watched.filter((concert) => !isFutureDate(concert.date));
---

<Layout title="baju | music">
  <section class="space-y-12">
    <div>
      <h1 class="text-3xl font-bold text-[var(--color-heading)] mb-4">
        Pieces Watchlist ðŸŽ»
      </h1>
      <p class="text-lg text-[var(--color-text)]">
        Concerts that I've attended and pieces I want to see performed.
      </p>
    </div>

    {
      upcomingConcerts.length > 0 && (
        <section>
          <h2 class="text-2xl font-semibold text-[var(--color-heading)] mb-6">
            Upcoming Concerts
          </h2>
          <div class="space-y-6">
            {upcomingConcerts.map((concert) => (
              <ConcertCard
                date={concert.date}
                venue={concert.venue}
                performances={concert.performances}
                isPast={false}
              />
            ))}
          </div>
        </section>
      )
    }

    {
      pastConcerts.length > 0 && (
        <section>
          <h2 class="text-2xl font-semibold text-[var(--color-heading)] mb-6">
            Past Concerts
          </h2>
          <div class="space-y-6">
            {pastConcerts.map((concert) => (
              <ConcertCard
                date={concert.date}
                venue={concert.venue}
                performances={concert.performances}
                isPast={true}
              />
            ))}
          </div>
        </section>
      )
    }

    <section>
      <h2 class="text-2xl font-semibold text-[var(--color-heading)] mb-6">
        Watch Wishlist
      </h2>
      <div class="space-y-3">
        {
          pieces.wishlist.map((piece) => (
            <article class="bg-[var(--color-bg)] border border-[var(--color-border)] rounded-lg p-4 hover:border-[var(--color-accent)] transition-colors">
              <div class="flex flex-wrap items-baseline gap-2">
                <span class="font-semibold text-[var(--color-heading)]">
                  {piece.composer}
                </span>
                <span class="text-[var(--color-text)]">{piece.piece}</span>
              </div>
            </article>
          ))
        }
      </div>
    </section>
  </section>
</Layout>
