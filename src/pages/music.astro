---
import Layout from "../layouts/Layout.astro";
import ConcertCard from "../components/ui/ConcertCard.astro";
import PageHeader from "../components/ui/PageHeader.astro";
import SectionHeader from "../components/ui/SectionHeader.astro";
import { pieces } from "../data/classicalWatchlist.js";
import { isFutureDate } from "../utils/date";
import "../styles/global.css";

const upcomingConcerts = pieces.watched.filter((concert) => isFutureDate(concert.date));
const pastConcerts = pieces.watched.filter((concert) => !isFutureDate(concert.date));
---

<Layout title="baju | music">
  <PageHeader title="Pieces Watchlist ðŸŽ»" subtitle="Concerts that I've attended and pieces I want to see performed." />

  <section class="space-y-12">
    {
      upcomingConcerts.length > 0 && (
        <section>
          <SectionHeader title="Upcoming Concerts" />
          <div class="space-y-6">
            {upcomingConcerts.map((concert) => (
              <ConcertCard
                date={concert.date}
                venue={concert.venue}
                performances={concert.performances}
                isPast={false}
              />
            ))}
          </div>
        </section>
      )
    }

    {
      pastConcerts.length > 0 && (
        <section>
          <SectionHeader title="Past Concerts" />
          <div class="space-y-6">
            {pastConcerts.map((concert) => (
              <ConcertCard
                date={concert.date}
                venue={concert.venue}
                performances={concert.performances}
                isPast={true}
              />
            ))}
          </div>
        </section>
      )
    }

    <section>
      <SectionHeader title="Watch Wishlist" />
      <div class="space-y-3">
        {
          pieces.wishlist.map((piece) => (
            <article class="card card-hover p-4">
              <div class="flex flex-wrap items-baseline gap-2">
                <span class="font-semibold text-heading">
                  {piece.composer}
                </span>
                <span class="text-muted">{piece.piece}</span>
              </div>
            </article>
          ))
        }
      </div>
    </section>
  </section>
</Layout>
