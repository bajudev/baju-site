---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";

const currently = ["Learning Swift with #100DaysOfSwift", "Building web applications with Astro"];

const skills = [
  { name: "Python", icon: "fab fa-python", color: "#3776ab" },
  { name: "JavaScript", icon: "fab fa-js", color: "#f7df1e" },
  { name: "Swift", icon: "fab fa-swift", color: "#fa7343" },
  { name: "Git", icon: "fab fa-git-alt", color: "#f05032" }
];

const socialLinks = [
  { url: "https://github.com/setofr", name: "GitHub", class: "social-link" },
  { url: "https://www.youtube.com/@setofR", name: "YouTube", class: "social-link" },
  { url: "https://mastodon.social/@setofR", name: "Mastodon", class: "social-link" },
  { url: "https://bsky.app/profile/setofr.bsky.social", name: "Bluesky", class: "social-link" },
  { url: "mailto:contact@setofr.me", name: "contact@setofr.me", class: "email-link" }
];
---

<Layout title="setofr | home">
  <div class="relative flex items-center justify-center select-none text-7xl md:text-8xl font-stix text-white mb-16 h-32">
    <span class="bracket-left inline-block z-10 glow">[</span>
    <span class="portfolio-text absolute left-1/2 transform -translate-x-1/2 opacity-0 font-normal text-gradient glow">setofℝ</span>
    <span class="bracket-right inline-block z-10 glow">]</span>
  </div>

  <section class="space-y-16 stagger-animation">
    <section class="glassmorphism rounded-2xl p-8 card-hover">
      <h2 class="text-2xl font-semibold text-[var(--color-heading)] mb-6 flex items-center gap-3">
        <span class="text-gradient">◈</span> Currently
      </h2>
      <ul class="space-y-3 text-[var(--color-text)]">
        {currently.map((thing) => (
          <li class="flex items-start gap-3">
            <span class="text-[var(--color-accent)] mt-1">▸</span>
            <span class="text-lg">{thing}</span>
          </li>
        ))}
      </ul>
    </section>

    <section class="glassmorphism rounded-2xl p-8 card-hover">
      <h2 class="text-2xl font-semibold text-[var(--color-heading)] mb-6 flex items-center gap-3">
        <span class="text-gradient">◈</span> Skills
      </h2>
      <ul class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {skills.map((skill) => (
          <li class="group">
            <div class="glassmorphism rounded-xl px-5 py-4 text-center transition-all duration-300 hover:scale-105 shine overflow-hidden">
              <i class={`${skill.icon} text-3xl mb-2 block transition-colors duration-300`} style={`color: ${skill.color}`} />
              <span class="text-sm font-medium text-[var(--color-text)] group-hover:text-[var(--color-heading)] transition-colors">{skill.name}</span>
            </div>
          </li>
        ))}
      </ul>
    </section>

    <section class="glassmorphism rounded-2xl p-8 card-hover">
      <h2 class="text-2xl font-semibold text-[var(--color-heading)] mb-6 flex items-center gap-3">
        <span class="text-gradient">◈</span> Contact
      </h2>
      <ul class="flex flex-col space-y-4">
        {socialLinks.map((link) => (
          <li>
            <a href={link.url} class={`${link.class} text-lg`} target="_blank" rel="noopener noreferrer">
              {link.name}
            </a>
          </li>
        ))}
      </ul>
    </section>
  </section>
</Layout>