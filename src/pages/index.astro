---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
---

<Layout title="setofr | home">
  <div class="relative flex items-center justify-center select-none text-7xl font-stix text-white mb-6">
    <span class="bracket-left inline-block z-10">[</span>
    <span class="portfolio-text absolute left-1/2 transform -translate-x-1/2 opacity-0 font-normal">setof‚Ñù</span>
    <span class="bracket-right inline-block z-10">]</span>
  </div>
  <section class="space-y-12">
    <section>
      <h2 class="text-xl font-semibold text-[var(--color-heading)] mb-3">Currently</h2>
      <ul class="list-disc list-inside text-lg space-y-1 text-[var(--color-text)]">
        <li>Focusing on studies</li>
        <li>Trying to learn more</li>
        <li>Failing maths</li>
      </ul>
    </section>
    <section>
      <h2 class="text-xl font-semibold text-[var(--color-heading)] mb-3">Skills</h2>
      <ul class="list-none flex gap-4 items-center text-[var(--color-text)]">
        <li class="flex gap-2 items-center text-[var(--color-text)]">
          <span class="si si-python text-lg"></span> Python
        </li>
        <li class="flex gap-2 items-center text-[var(--color-text)]">
          <span class="si si-swift text-lg"></span> Swift (wip)
        </li>
      </ul>
    </section>

    <section>
      <h2 class="text-xl font-semibold text-[var(--color-heading)] mb-3">Contact</h2>
      <ul class="flex space-x-4 text-[var(--color-text)]">
        <li class="text-[var(--color-text)]">
          <a href="https://github.com/setofr" class="social-link hover:text-[var(--color-accent)]" target="_blank">
            GitHub
          </a>
        </br>
          <a href="https://www.youtube.com/@setofR" class="social-link hover:text-[var(--color-accent)]" target="_blank">
            YouTube
          </a>
        </br>
          <a href="https://mastodon.social/@setofR" class="social-link hover:text-[var(--color-accent)]" target="_blank">
            Mastodon
          </a>
        </br>
          <a href="https://bsky.app/profile/setofr.bsky.social" class="social-link hover:text-[var(--color-accent)]" target="_blank">
            Bluesky
          </a>
        </br> 
        <div class="relative inline-block">
          <button
            onclick="navigator.clipboard.writeText('contact@setofr.me'); const msg = this.nextElementSibling; msg.classList.remove('hidden'); setTimeout(() => msg.classList.add('hidden'), 2000);"
            class="email-link hover:text-[var(--color-accent)]"
          >
            contact@setofr.me
          </button>
          <span class="absolute left-full ml-2 text-sm text-[var(--color-accent)] hidden">
            copied:)
          </span>
        </div>
        </li>
      </ul>
    </section>

  </section>
</Layout>