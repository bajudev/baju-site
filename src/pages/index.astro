---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
---
<Layout title="my portfolio">
  <section class="space-y-6">
    <p class="text-lg">
      hello! i'm [your name], a programmer who loves clean, efficient code and simple design.
    </p>
    <h2 class="text-2xl font-semibold lowercase" style="color: var(--color-heading);">skills</h2>
    <ul class="list-disc pl-5 space-y-2">
      <li>javascript / typescript</li>
      <li>python</li>
      <li>react</li>
      <li>node.js</li>
    </ul>
    <h2 class="text-2xl font-semibold lowercase" style="color: var(--color-heading);">social</h2>
    <ul class="flex space-x-4">
      <li>
        <a href="https://github.com/rohxn-o" class="social-link lowercase" target="_blank">
          github
        </a>
      </li>
      <!-- Add more social links as needed -->
    </ul>
  </section>
</Layout>