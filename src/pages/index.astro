---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";

const currently = [
  "Learning Swift with #100DaysOfSwift",
  "Building web applications with Astro",
];

const skills = [
  { name: "Python", icon: "fab fa-python" },
  { name: "Swift", icon: "fab fa-swift" },
  { name: "Git", icon: "fab fa-git-alt" },
];

const socialLinks = [
  { url: "https://github.com/bajudev", name: "GitHub", class: "social-link" },
  {
    url: "https://www.youtube.com/@baju-dev",
    name: "YouTube",
    class: "social-link",
  },
  {
    url: "https://mastodon.social/@bajudev",
    name: "Mastodon",
    class: "social-link",
    rel: "me",
  },
  {
    url: "https://bsky.app/profile/bajudev.bsky.social",
    name: "Bluesky",
    class: "social-link",
  },
  {
    url: "mailto:contact@setofr.me",
    name: "contact@setofr.me",
    class: "email-link",
  },
];
---

<Layout title="setofr | home">
  <div
    class="relative flex items-center justify-center select-none text-7xl font-stix text-white mb-12"
  >
    <span class="bracket-left inline-block z-10">[</span>
    <span
      class="portfolio-text absolute left-1/2 transform -translate-x-1/2 opacity-0 font-normal"
      >baju</span
    >
    <span class="bracket-right inline-block z-10">]</span>
  </div>

  <section class="space-y-12">
    <section>
      <h2 class="text-xl font-semibold text-[var(--color-heading)] mb-4">
        Currently
      </h2>
      <ul class="list-disc text-lg space-y-2 text-[var(--color-text)] pl-4">
        {currently.map((thing) => <li>{thing}</li>)}
      </ul>
    </section>

    <section>
      <h2 class="text-xl font-semibold text-[var(--color-heading)] mb-4">
        Skills
      </h2>
      <ul class="list-none flex gap-4 items-center flex-wrap">
        {
          skills.map((skill) => (
            <li class="flex gap-2 items-center text-[var(--color-text)] bg-[var(--color-border)] px-4 py-2 rounded-full">
              <i class={`${skill.icon} text-lg`} />
              <span>{skill.name}</span>
            </li>
          ))
        }
      </ul>
    </section>

    <section>
      <h2 class="text-xl font-semibold text-[var(--color-heading)] mb-4">
        Contact
      </h2>
      <ul class="flex flex-col space-y-3 text-[var(--color-text)]">
        {
          socialLinks.map((link) => (
            <li>
              <a
                href={link.url}
                class={`${link.class}`}
                target={link.url.startsWith("mailto:") ? "_self" : "_blank"}
                rel={link.rel || "noopener noreferrer nofollow"}
              >
                {link.name}
              </a>
            </li>
          ))
        }
      </ul>
    </section>
  </section>
</Layout>
