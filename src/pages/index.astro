---
import Layout from "../layouts/Layout.astro";
import PageHeader from "../components/ui/PageHeader.astro";
import SectionHeader from "../components/ui/SectionHeader.astro";
import "../styles/global.css";
import { SITE } from "../config";

const currently = [
  "focusing on A-Levels",
  "practising the violin",
  "probably listening to music",
  "exploring a new interest in maths",
];

const skills = [
  { name: "Python", icon: "fab fa-python" },
  // { name: "Swift", icon: "fab fa-swift" },
  // { name: "Git", icon: "fab fa-git-alt" },
];

const socialLinks = [
  { url: SITE.social.github, name: "GitHub", class: "social-link" },
  { url: SITE.social.youtube, name: "YouTube", class: "social-link" },
  { url: SITE.social.mastodon, name: "Mastodon", class: "social-link", rel: "me" },
  { url: SITE.social.bluesky, name: "Bluesky", class: "social-link" },
  { url: `mailto:${SITE.email}`, name: SITE.email, class: "email-link" },
];
---

<Layout title="baju | home">
  <PageHeader title="Rohan" />

  <section class="space-y-12">
    <section>
      <SectionHeader title="Currently" />
      <ul class="list-disc space-y-2 pl-5 marker:text-muted">
        {currently.map((thing) => (
          <li>{thing}</li>
        ))}
      </ul>
    </section>

    <section>
      <SectionHeader title="Skills" />
      <ul class="list-none flex gap-3 items-center flex-wrap">
        {skills.map((skill) => (
          <li class="skill-pill flex gap-2 items-center px-4 py-2 rounded-full">
            <i class={skill.icon}></i>
            <span>{skill.name}</span>
          </li>
        ))}
      </ul>
    </section>

    <section>
      <SectionHeader title="Contact" />
      TBA
      <!-- 
      <ul class="flex flex-col space-y-3">
        {socialLinks.map((link) => (
          <li>
            <a
              href={link.url}
              class={link.class}
              target={link.url.startsWith("mailto:") ? "_self" : "_blank"}
              rel={link.rel ? link.rel : "noopener noreferrer nofollow"}
            >
              {link.name}
            </a>
          </li>
        ))}
      </ul>
      -->
    </section>
  </section>
</Layout>