---
import Layout from './Layout.astro';
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <article class="prose prose-lg dark:prose-invert max-w-none">
    <h1 class="text-4xl font-bold mb-2">{frontmatter.title}</h1>
    <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">
      Posted on {new Date(frontmatter.pubDate).toLocaleDateString()}
    </p>

    {frontmatter.tags && (
      <div class="flex flex-wrap gap-2 mb-4">
        {frontmatter.tags.map((tag) => (
          <a 
            href={`/tags/${tag}`} 
            class="inline-block bg-blue-200 text-blue-950 hover:bg-pink-400 hover:text-white rounded-full px-3 py-1 text-sm transition-colors"
          >
            #{tag}
          </a>
        ))}
      </div>
    )}

    <slot />
  </article>
</Layout>