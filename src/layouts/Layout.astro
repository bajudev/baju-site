---
import AnimatedBackground from "../components/Background.astro";
import StructuredData from "../components/StructuredData.astro";
import { SITE } from "../config";

const { title, description, publishDate, tags } = Astro.props;
const pageTitle = title || SITE.title;
const pageDescription = description || SITE.description;
const currentYear = new Date().getFullYear();
const currentPath = Astro.url.pathname;
const canonicalURL = new URL(currentPath, SITE.url).href;

const isHomePage = currentPath === "/";
const isBlogPost = currentPath.startsWith("/posts/");
const isBlogPage = currentPath === "/blog" || isBlogPost || currentPath.startsWith("/tags/");
const isProjectsPage = currentPath === "/projects";
---

<!doctype html>
<html lang="en" class="bg-[var(--color-bg)] text-[var(--color-text)]">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={pageDescription} />
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    <link rel="canonical" href={canonicalURL} />

    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />

    <title>{pageTitle}</title>
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="sitemap" href="/sitemap.xml" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="baju RSS Feed"
      href="/rss.xml"
    />
    <link rel="stylesheet" href="/styles/global.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerPolicy="no-referrer"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono&display=swap"
      rel="stylesheet"
      crossorigin="anonymous"
    />

    <StructuredData
      type={isHomePage ? "person" : isBlogPost ? "blogPost" : "website"}
      title={isBlogPost ? pageTitle : undefined}
      description={isBlogPost ? pageDescription : undefined}
      url={isBlogPost ? canonicalURL : undefined}
      publishDate={isBlogPost ? publishDate : undefined}
      tags={isBlogPost ? tags : undefined}
    />

  </head>
    <body class="antialiased font-['Bauer_Bodoni']">
    <a href="#main-content" class="skip-to-content">Skip to content</a>
    <AnimatedBackground />
    <div class="container mx-auto max-w-3xl px-6 py-12 relative">
      <header class="flex justify-between items-center py-8 mb-12">
        <a href="/" class="logo-link" aria-label="Home"> </a>
        <nav
          class="flex space-x-8"
          role="navigation"
          aria-label="Main navigation"
        >
          <a href="/" class={`nav-link ${isHomePage ? "active" : ""}`}>home</a>
          <a href="/blog" class={`nav-link ${isBlogPage ? "active" : ""}`}>blog</a>
          <a href="/projects" class={`nav-link ${isProjectsPage ? "active" : ""}`}>projects</a>
        </nav>
      </header>
      <main id="main-content" class="mb-16 min-h-[60vh]" role="main">
        <slot />
      </main>
      <footer
        class="text-center py-8 border-t border-[var(--color-border)]"
        role="contentinfo"
      >
        <p class="text-sm text-[var(--color-text)] font-['Bauer_Bodoni']">Â© {currentYear} baju</p>
        <p class="text-xs text-gray-700 font-['Bauer_Bodoni']">the design of this website is inspired by the G. Henle Verlag publishing house</p>
      </footer>
    </div>
  </body>
</html>

<style>
  .skip-to-content {
    position: absolute;
    left: -9999px;
    z-index: 999;
    padding: 1rem 1.5rem;
    background: var(--color-accent);
    color: white;
    text-decoration: none;
    border-radius: 0.25rem;
    font-weight: 600;
  }

  .skip-to-content:focus {
    left: 1rem;
    top: 1rem;
  }

  .logo-link {
    transition: transform 0.2s ease;
  }

  .logo-link:hover {
    transform: translateY(-2px);
  }
</style>