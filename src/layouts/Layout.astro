---
const { title } = Astro.props;
const pageTitle = title || "setofr";
const currentYear = new Date().getFullYear();
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en" class="bg-[var(--color-bg)] text-[var(--color-text)]">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="setofr RSS Feed"
      href="/rss.xml"
    />
    <link rel="stylesheet" href="/styles/global.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=STIX+Two+Math&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="antialiased">
    <div class="container mx-auto max-w-2xl px-4 py-8">
      <header class="flex justify-end items-center py-6">
        <nav
          class="flex space-x-4"
          role="navigation"
          aria-label="Main navigation"
        >
          <a
            href="/"
            class={`nav-link ${currentPath === "/" ? "active" : ""}`}
            aria-label="Home page">home</a
          >
          <a
            href="/blog"
            class={`nav-link ${currentPath === "/blog" || currentPath.startsWith("/posts/") || currentPath.startsWith("/tags/") ? "active" : ""}`}
            aria-label="Blog page">blog</a
          >
          <a
            href="/projects"
            class={`nav-link ${currentPath === "/projects" ? "active" : ""}`}
            aria-label="Projects page">projects</a
          >
        </nav>
      </header>
      <main class="mb-8" role="main">
        <slot />
      </main>
      <footer
        class="text-center py-4 border-t border-[var(--color-border)]"
        role="contentinfo"
      >
        <p class="text-gray-500">Â© {currentYear} setofr</p>
      </footer>
    </div>
  </body>
</html>
