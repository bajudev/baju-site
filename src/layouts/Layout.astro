---
import AnimatedBackground from "../components/Background.astro";
const { title } = Astro.props;
const pageTitle = title || "setofr";
const currentYear = new Date().getFullYear();
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en" class="bg-[var(--color-bg)] text-[var(--color-text)]">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Computer science student exploring algorithms, web development, and technology" />
    <title>{pageTitle}</title>
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="alternate" type="application/rss+xml" title="setofr RSS Feed" href="/rss.xml" />
    <link rel="stylesheet" href="/styles/global.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono&family=STIX+Two+Math&display=swap" rel="stylesheet" />
  </head>
  <body class="antialiased font-['Inter']">
    <AnimatedBackground />
    <div class="container mx-auto max-w-2xl px-4 py-8 relative">
      <header class="flex justify-between items-center py-6 backdrop-blur-sm">
        <a href="/" class="logo-link">
        </a>
        <nav class="flex space-x-6" role="navigation" aria-label="Main navigation">
          <a href="/" class={`nav-link ${currentPath === "/" ? "active" : ""}`}>home</a>
          <a href="/blog" class={`nav-link ${currentPath === "/blog" || currentPath.startsWith("/posts/") || currentPath.startsWith("/tags/") ? "active" : ""}`}>blog</a>
          <a href="/projects" class={`nav-link ${currentPath === "/projects" ? "active" : ""}`}>projects</a>
        </nav>
      </header>
      <main class="mb-8 min-h-[60vh]" role="main">
        <slot />
      </main>
      <footer class="text-center py-4 border-t border-[var(--color-border)] backdrop-blur-sm" role="contentinfo">
        <p class="text-sm text-[var(--color-text)]">Â© {currentYear} setofr</p>
      </footer>
    </div>
  </body>
</html>

<style>
  .logo-link {
    transition: transform 0.2s ease;
  }
  .logo-link:hover {
    transform: translateY(-2px);
  }
</style>