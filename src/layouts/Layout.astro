---
import AnimatedBackground from "../components/Background.astro";
const { title } = Astro.props;
const pageTitle = title || "setofr";
const currentYear = new Date().getFullYear();
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en" class="bg-[var(--color-bg)] text-[var(--color-text)]">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Computer science student exploring algorithms, web development, and technology" />
    <title>{pageTitle}</title>
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="alternate" type="application/rss+xml" title="setofr RSS Feed" href="/rss.xml" />
    <link rel="stylesheet" href="/styles/global.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=JetBrains+Mono&family=STIX+Two+Math&display=swap" rel="stylesheet" />
  </head>
  <body class="antialiased font-['Inter'] min-h-screen">
    <div class="fixed inset-0 bg-gradient-to-br from-[var(--color-accent)] via-[var(--color-bg)] to-[var(--color-secondary)] opacity-20"></div>
    <AnimatedBackground />
    <div class="container mx-auto max-w-2xl px-4 py-8 relative z-10">
      <header class="flex justify-between items-center py-6 mb-8 glassmorphism rounded-2xl px-8">
        <a href="/" class="logo-link text-2xl font-bold text-gradient">
          setofℝ
        </a>
        <nav class="flex space-x-8" role="navigation" aria-label="Main navigation">
          <a href="/" class={`nav-link ${currentPath === "/" ? "active" : ""}`}>home</a>
          <a href="/blog" class={`nav-link ${currentPath === "/blog" || currentPath.startsWith("/posts/") || currentPath.startsWith("/tags/") ? "active" : ""}`}>blog</a>
          <a href="/projects" class={`nav-link ${currentPath === "/projects" ? "active" : ""}`}>projects</a>
        </nav>
      </header>
      <main class="mb-16 min-h-[60vh] animate-slide-up" role="main">
        <slot />
      </main>
      <footer class="text-center py-6 glassmorphism rounded-2xl" role="contentinfo">
        <p class="text-sm text-[var(--color-text)] opacity-60">© {currentYear} setofr</p>
      </footer>
    </div>
  </body>
</html>

<style>
  .logo-link {
    transition: all 0.3s ease;
  }
  .logo-link:hover {
    transform: translateY(-2px) scale(1.05);
    filter: drop-shadow(0 4px 20px rgba(59, 130, 246, 0.4));
  }
</style>