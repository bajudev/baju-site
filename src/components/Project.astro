---
const { title, description, url, technologies, image, status } = Astro.props;
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class="block"
>
  <article
    class="p-8 border border-[var(--color-border)] transition-all duration-200 hover:border-[var(--color-accent)]"
  >
    <div class="mb-4 flex items-start justify-between">
      <h3
        class="text-xl text-[var(--color-heading)] transition-colors font-['Bodoni_MT']"
      >
        {title}
      </h3>
      {
        status && (
          <span class="px-3 py-1 text-xs border border-[var(--color-text)] text-[var(--color-text)] font-['Bodoni_MT']">
            {status}
          </span>
        )
      }
    </div>

    {
      image && (
        <img
          src={image}
          alt={`${title} preview`}
          class="mb-5 w-full h-48 object-cover"
          loading="lazy"
        />
      )
    }

    <p class="mb-5 text-[var(--color-text)] leading-relaxed">{description}</p>

    {
      technologies && (
        <div class="mb-5 flex flex-wrap gap-2">
          {technologies.map((tech: unknown) => (
            <span class="px-3 py-1 text-xs border border-[var(--color-border)] text-[var(--color-text)] font-['Bodoni_MT']">
              {tech}
            </span>
          ))}
        </div>
      )
    }

    <div class="inline-flex items-center text-[var(--color-text)] transition-colors hover:text-[var(--color-heading)] font-['Bodoni_MT']">
      View Project<span class="ml-2 font-sans text-xs">â†—</span>
    </div>
  </article>
</a>