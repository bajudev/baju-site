---
const { title, description, url, technologies, image, status } = Astro.props;
---

<article class="p-6 border rounded-lg shadow-lg bg-[var(--color-border)] border-[var(--color-accent)] transition-all duration-300 hover:shadow-2xl hover:scale-105">
  <div class="mb-4 flex items-start justify-between">
    <h3 class="text-xl font-semibold text-[var(--color-heading)] transition-colors hover:text-[var(--color-accent)]">{title}</h3>
    {status && (
      <span class="px-2 py-1 text-xs text-white rounded-full bg-[var(--color-accent)]">
        {status}
      </span>
    )}
  </div>

  {image && (
    <img 
      src={image} 
      alt={`${title} preview`} 
      class="mb-4 w-full h-40 object-cover rounded-md border border-[var(--color-border)]"
    />
  )}

  <p class="mb-4 text-[var(--color-text)]">{description}</p>

  {technologies && (
    <div class="mb-4 flex flex-wrap gap-2">
      {technologies.map((tech: unknown) => (
        <span class="px-2 py-1 text-xs text-white rounded bg-[var(--color-primary)]">
          {tech}
        </span>
      ))}
    </div>
  )}

  <a 
    href={url} 
    target="_blank" 
    class="inline-flex items-center font-medium text-[var(--color-accent)] transition-colors hover:text-[var(--color-primary)]"
  >
    View Project<span class="ml-1">â†—</span>
  </a>
</article>