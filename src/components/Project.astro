---
const { title, description, url, technologies, image, status } = Astro.props;
---

<article class="card">
  <div class="flex justify-between items-start mb-4">
    <h3 class="text-xl font-semibold text-[var(--color-heading)] hover:text-[var(--color-accent)] transition-colors">{title}</h3>
    {status && <span class="badge">{status}</span>}
  </div>

  {image && (
    <img src={image} alt={`${title} preview`} class="card-img mb-4" />
  )}

  <p class="text-[var(--color-text)] mb-4">{description}</p>

  {technologies && (
    <div class="flex flex-wrap gap-2 mb-4">
      {technologies.map((tech: unknown) => (
        <span class="tech-pill">{tech}</span>
      ))}
    </div>
  )}

  <a href={url} target="_blank" class="link-arrow">View Project <span class="ml-1">â†—</span></a>
</article>