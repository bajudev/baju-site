---
import Card from "./Card.astro";
const { title, url, description, pubDate, tags, prepTime, cookTime, servings, difficulty } = Astro.props;
const formattedDate = new Date(pubDate).toLocaleDateString("en-US", {
  year: "numeric",
  month: "short",
  day: "numeric",
});
---

<article>
  <a href={url} class="block">
    <Card class="hover:border-[var(--color-accent)]">
      <div class="flex items-start justify-between mb-2">
        <div class="flex-1">
          <div class="flex items-center gap-2 mb-2">
            <span class="inline-block bg-[var(--color-accent)] text-white rounded-full px-2 py-0.5 text-xs font-medium">
              üç≥ Recipe
            </span>
            {difficulty && (
              <span class="text-xs text-[var(--color-text)]">
                {difficulty}
              </span>
            )}
          </div>
          <h3
            class="text-xl font-semibold text-[var(--color-heading)] group-hover:text-[var(--color-accent)] transition-colors"
          >
            {title}
          </h3>
        </div>
        <time class="text-sm text-[var(--color-text)] whitespace-nowrap ml-4">
          {formattedDate}
        </time>
      </div>

      <p class="text-[var(--color-text)] mb-3">{description}</p>

      {/* Recipe Meta Info */}
      <div class="flex items-center gap-4 mb-3 text-sm text-[var(--color-text)]">
        {prepTime && (
          <span class="flex items-center gap-1">
            <span>‚è±Ô∏è</span>
            <span>{prepTime}</span>
          </span>
        )}
        {cookTime && (
          <span class="flex items-center gap-1">
            <span>üî•</span>
            <span>{cookTime}</span>
          </span>
        )}
        {servings && (
          <span class="flex items-center gap-1">
            <span>üçΩÔ∏è</span>
            <span>{servings} servings</span>
          </span>
        )}
      </div>

      {
        tags && (
          <div class="flex flex-wrap gap-2">
            {tags.map((tag: string) => (
              <span class="text-xs px-2 py-1 rounded-full bg-[var(--color-accent)]/10 text-[var(--color-accent)]">
                #{tag}
              </span>
            ))}
          </div>
        )
      }
    </Card>
  </a>
</article>
