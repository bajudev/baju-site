---
const { title, url, description, pubDate } = Astro.props;
const formattedDate = new Date(pubDate).toLocaleDateString();
---

<li class="mb-6 border-b border-gray-200 dark:border-gray-700 pb-4">
  <a href={url} class="text-xl font-semibold hover:text-pink-400">{title}</a>
  <p class="text-gray-600 dark:text-gray-300">{description}</p>
  <time class="text-sm text-gray-500 dark:text-gray-400">{formattedDate}</time>
</li>