---
import Card from "./Card.astro";
import TagPill from "./ui/TagPill.astro";

const { title, url, description, pubDate, tags } = Astro.props;
---

<article>
  <a href={url} class="block">
    <Card class="card-hover">
      <div class="flex items-start justify-between mb-3">
        <h3 class="text-xl font-bold text-heading transition-colors font-['Bauer_Bodoni']">
          {title}
        </h3>
        <time class="text-sm text-muted whitespace-nowrap ml-4 font-['Bauer_Bodoni']">
          {pubDate}
        </time>
      </div>
      <p class="text-muted mb-4 leading-relaxed">{description}</p>
      {
        tags && (
          <div class="flex flex-wrap gap-2">
            {tags.map((tag: string) => (
              <TagPill tag={tag} />
            ))}
          </div>
        )
      }
    </Card>
  </a>
</article>
